<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="PROJECT_NAME" value="kwl-scheduler" />
	
	<appender name="MAIN_LOGGER" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>/var/log/tomcat8/${PROJECT_NAME}.log</file>
    	<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      		<fileNamePattern>/var/log/tomcat8/${PROJECT_NAME}.%i.log.zip</fileNamePattern>
      		<minIndex>1</minIndex>
      		<maxIndex>4</maxIndex>
    	</rollingPolicy>
    	<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>100MB</maxFileSize>
    	</triggeringPolicy>
    	<encoder>
      		<Pattern>%d{dd MMM yyyy HH:mm:ss.SSS,Asia/Singapore} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    	</encoder>
	</appender> 

	<root level="INFO">
    	<appender-ref ref="MAIN_LOGGER" />
	</root>
  
</configuration>